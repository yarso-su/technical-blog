# Cache largo para assets con hash (Astro los genera automáticamente)
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Cache para fuentes
/fonts/*
  Cache-Control: public, max-age=31536000
  
*.woff2
  Cache-Control: public, max-age=31536000

*.woff
  Cache-Control: public, max-age=31536000

# Cache para archivos estáticos
*.css
  Cache-Control: public, max-age=31536000

*.js
  Cache-Control: public, max-age=31536000

*.png
  Cache-Control: public, max-age=31536000

*.jpg
  Cache-Control: public, max-age=31536000

*.webp
  Cache-Control: public, max-age=31536000

*.svg
  Cache-Control: public, max-age=86400

# HTML con cache corto
*.html
  Cache-Control: public, max-age=300

# Configuración de seguridad para todas las rutas
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' https://static.cloudflareinsights.com; font-src 'self' data:; img-src 'self' data: https:; connect-src 'self' https:; object-src 'none'; base-uri 'self';
